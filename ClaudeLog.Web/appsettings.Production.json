{
  // Production environment configuration
  // Used when running the published .exe directly (ASPNETCORE_ENVIRONMENT=Production)

  "Logging": {
    "LogLevel": {
      "Default": "Warning",  // Less verbose logging for production
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "ClaudeLog": "Server=localhost;Database=ClaudeLog;Integrated Security=true;TrustServerCertificate=true;"
  },

  // Production runs on port 15088 (matches hook configuration)
  // Hook connects to http://localhost:15088/api
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:15088"
      }
    }
  }
}
