{
  // Base configuration shared across all environments
  // Environment-specific settings override these in appsettings.{Environment}.json

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  // Database connection - Windows Integrated Security (no password needed)
  // Change "localhost" to your SQL Server instance name if different
  "ConnectionStrings": {
    "ClaudeLog": "Server=localhost;Database=ClaudeLog;Integrated Security=true;TrustServerCertificate=true;"
  }
}
